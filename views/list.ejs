<!DOCTYPE html>
<html>
<head>
  <title>Flight Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-light">
  <% if (success) { %>
    <div class="flash-message">
      <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>

  <div class="dashboard-header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col">
          <h1><i class="fas fa-plane-departure me-3"></i>Flight Dashboard</h1>
          <p class="lead mb-0">Welcome, <strong><%= user.name %></strong> (ID: <%= user.id %>) | <a href="/logout" class="text-white">Logout</a></p>
        </div>
        <div class="col-auto">
          <button class="btn btn-light btn-lg" data-bs-toggle="modal" data-bs-target="#addModal">
            <i class="fas fa-plus me-2"></i>Add Flight
          </button>
          
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% if (flights.length === 0) { %>
        <div class="col-12 text-center py-5">
          <i class="fas fa-plane-slash fa-4x text-muted mb-3"></i>
          <h4 class="text-muted">No flights yet</h4>
          <p class="text-muted">Add your first flight using the button above!</p>
        </div>
      <% } else { %>
        <% flights.forEach(flight => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card flight-card h-100 shadow-sm">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                  <h5 class="card-title mb-0"><%= flight.flightNumber %></h5>
                  <span class="badge status-<%= flight.status.replace(' ', '') %>"><%= flight.status %></span>
                </div>
                <h6 class="card-subtitle mb-2 text-muted"><%= flight.airline %></h6>
                <div class="flight-route my-2">
                  <strong><%= flight.departureAirport %></strong> â†’ <strong><%= flight.arrivalAirport %></strong>
                </div>
                <p class="card-text small text-muted">
                  <i class="fas fa-clock me-1"></i><%= flight.hours %>:<%= flight.minutes %>
                </p>
                <% if (flight.aircraftType) { %>
                  <p class="card-text small text-info">
                    <i class="fas fa-plane me-1"></i> <%= flight.aircraftType %>
                  </p>
                <% } %>
                <% if (flight.photo) { %>
                  <img src="data:image/png;base64,<%= flight.photo %>" class="img-fluid rounded mt-2" style="max-height: 120px;">
                <% } %>
              </div>
              <div class="card-footer bg-transparent border-0">
                <a href="/details?_id=<%= flight._id %>" class="btn btn-sm btn-outline-primary me-2">Details</a>
                <a href="/edit?_id=<%= flight._id %>" class="btn btn-sm btn-outline-warning me-2">Edit</a>
                <form action="/flights/<%= flight.flightNumber %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete <%= flight.flightNumber %>?')">
                    <i class="fas fa-trash"></i> Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Add Flight Modal -->
  <div class="modal fade" id="addModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title"><i class="fas fa-plus me-2"></i>Add New Flight</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <form action="/flights" method="POST" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Flight Number <span class="text-danger">*</span></label>
                <input name="flightNumber" class="form-control" placeholder="e.g., CX888" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Airline</label>
                <input name="airline" class="form-control" placeholder="e.g., Cathay Pacific">
              </div>
              <div class="col-md-4">
                <label class="form-label">From <span class="text-danger">*</span></label>
                <input name="departureAirport" class="form-control" placeholder="e.g., HKG" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">To <span class="text-danger">*</span></label>
                <input name="arrivalAirport" class="form-control" placeholder="e.g., TPE" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Destination <span class="text-danger">*</span></label>
                <input name="destination" class="form-control" placeholder="e.g., Taipei" required>
              </div>
              <div class="col-md-3">
                <label class="form-label">Hour <span class="text-danger">*</span></label>
                <select name="hours" class="form-select" required>
                  <% for(let i=0; i<24; i++) { %>
                    <option value="<%= i.toString().padStart(2,'0') %>"><%= i.toString().padStart(2,'0') %></option>
                  <% } %>
                </select>
              </div>
              <div class="col-md-3">
                <label class="form-label">Minute <span class="text-danger">*</span></label>
                <select name="minutes" class="form-select" required>
                  <% for(let i=0; i<60; i+=5) { %>
                    <option value="<%= i.toString().padStart(2,'0') %>"><%= i.toString().padStart(2,'0') %></option>
                  <% } %>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">Gate</label>
                <input name="gate" class="form-control" placeholder="e.g., K">
              </div>
              <div class="col-md-6">
                <label class="form-label">Status <span class="text-danger">*</span></label>
                <select name="status" class="form-select" required>
                  <option>On Time</option>
                  <option>Delayed</option>
                  <option>Cancelled</option>
                  <option>Departed</option>
                  <option>Arrived</option>
                  <option>Holding</option>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">Photo</label>
                <input type="file" name="filetoupload" class="form-control" accept="image/*">
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Add Flight</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    setTimeout(() => document.querySelectorAll('.alert').forEach(a => a.remove()), 5000);
  </script>
</body>
</html>
