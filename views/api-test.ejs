<!DOCTYPE html>
<html>
<head>
  <title>API Test</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    pre { background: #2d2d2d; color: #f8f8f2; padding: 15px; border-radius: 8px; overflow-x: auto; }
  </style>
</head>
<body class="bg-light p-4">
  <div class="container">
    <h1 class="text-center mb-4">RESTful API Test <i class="fas fa-code"></i></h1>
    <p class="text-center">Welcome, <strong><%= user.name %></strong> (ID: <%= user.id %>) | <a href="/list">Dashboard</a> | <a href="/logout">Logout</a></p>

    <div class="row">
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-header bg-primary text-white"><h5>POST /api/flights (Create)</h5></div>
          <div class="card-body">
            <pre>curl -X POST -F "flightNumber=CX888" -F "destination=Tokyo" -F "hours=04" -F "minutes=30" -F "status=On Time" your-url/api/flights</pre>
            <button class="btn btn-success w-100" onclick="testCreate()">Test Create</button>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-header bg-info text-white"><h5>GET /api/flights (Read All)</h5></div>
          <div class="card-body">
            <pre>curl your-url/api/flights</pre>
            <button class="btn btn-info w-100" onclick="testReadAll()">Test Read All</button>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-header bg-warning text-white"><h5>PUT /api/flights/CX888 (Update)</h5></div>
          <div class="card-body">
            <pre>curl -X PUT -F "status=Delayed" your-url/api/flights/CX888</pre>
            <button class="btn btn-warning w-100" onclick="testUpdate()">Test Update</button>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-header bg-danger text-white"><h5>DELETE /api/flights/CX888</h5></div>
          <div class="card-body">
            <pre>curl -X DELETE your-url/api/flights/CX888</pre>
            <button class="btn btn-danger w-100" onclick="testDelete()">Test Delete</button>
          </div>
        </div>
      </div>
    </div>

    <div id="result" class="mt-4 card">
      <div class="card-header">Result</div>
      <div class="card-body">
        <pre id="result-text">Click a button to test API</pre>
      </div>
    </div>
  </div>

  <script>
    async function testCreate() {
      const form = new FormData();
      form.append('flightNumber', 'CX888');
      form.append('destination', 'Tokyo');
      form.append('hours', '04');
      form.append('minutes', '30');
      form.append('status', 'On Time');
      const res = await fetch('/api/flights', { method: 'POST', body: form });
      const data = await res.json();
      document.getElementById('result-text').textContent = JSON.stringify(data, null, 2);
    }

    async function testReadAll() {
      const res = await fetch('/api/flights');
      const data = await res.json();
      document.getElementById('result-text').textContent = JSON.stringify(data, null, 2);
    }

    async function testUpdate() {
      const form = new FormData();
      form.append('status', 'Delayed');
      const res = await fetch('/api/flights/CX888', { method: 'PUT', body: form });
      const data = await res.json();
      document.getElementById('result-text').textContent = JSON.stringify(data, null, 2);
    }

    async function testDelete() {
      if (confirm('Delete CX888?')) {
        const res = await fetch('/api/flights/CX888', { method: 'DELETE' });
        const data = await res.json();
        document.getElementById('result-text').textContent = JSON.stringify(data, null, 2);
      }
    }
  </script>
</body>
</html>
