

<!DOCTYPE html>
<html>
<head>
  <title>Flight Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-4">
    <div class="card shadow">
      <div class="card-body">
        <h2 class="card-title">Flight Details: <%= flight.flightNumber %></h2>
        <p class="text-muted">Welcome, <%= user.name %> (ID: <%= user.id %>) | <a href="/list">Back to Dashboard</a> | <a href="/logout">Logout</a></p>
        <hr>
        <div class="row">
          <div class="col-md-6">
            <p><strong>Flight Number:</strong> <%= flight.flightNumber %></p>
            <p><strong>Destination:</strong> <%= flight.destination %></p>
            <p><strong>Time:</strong> <%= flight.hours %>:<%= flight.minutes %></p>
            <p><strong>Gate:</strong> <%= flight.gate %></p>
            <p><strong>Status:</strong> <span class="badge status-<%= flight.status.replace(' ', '') %>"><%= flight.status %></span></p>
          </div>
          <div class="col-md-6">
            <% if (flight.photo) { %>
              <img src="data:image/png;base64,<%= flight.photo %>" class="img-fluid rounded">
            <% } %>
          </div>
        </div>
        <hr>
        <a href="/edit?_id=<%= flight._id %>" class="btn btn-primary me-2">Edit</a>
        <form action="/flights/<%= flight.flightNumber %>?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger" onclick="return confirm('Delete?')">Delete</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
